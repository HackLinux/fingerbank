<% previous_search ||= '' %>
<div class="search">
  <%= form_tag action_url, :method => :get do %>
    <div class="file_title input-group" style="width:400px;">
      <%= text_field_tag :search, params[:search], :class => 'field form-control', :placeholder => "Search...", :value => previous_search %>
      <span class="input-group-btn">
        <%= submit_tag "Search", :name => nil, :class => 'btn btn-primary' %>
      </span>
    </div>
  <% end %>
</div>


